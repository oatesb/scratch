<?xml version="1.0" encoding="utf-8"?>
<VRASConfiguration xmlns="http://microsoft.com/WindowsLive/Safety/VRAS.xsd">
  <Settings>
    <GlobalOverridableSettings>
      <NewFileDelaySeconds>15</NewFileDelaySeconds>
      <DeleteAfterCopy>false</DeleteAfterCopy>
      <CopyZeroByteFiles>true</CopyZeroByteFiles>
      <CopyThreadPerSource>1</CopyThreadPerSource>
      <SleepBetweenBatchesMs>15000</SleepBetweenBatchesMs>
      <CopyFromFirstDestinationDir>false</CopyFromFirstDestinationDir>
      <CopyRetryCount>1</CopyRetryCount>
      <RetrySleepMs>1</RetrySleepMs>
    </GlobalOverridableSettings>
    <EventSource>EventSource1</EventSource>
    <ServiceStopTimeOutSec >1</ServiceStopTimeOutSec >
    <ErrorLogPath>ErrorLogPath1</ErrorLogPath>
    <RegExMatchNotFoundDefaultString>RegExMatchNotFoundDefaultString1</RegExMatchNotFoundDefaultString>
    <TempFileExt>inProcess</TempFileExt>
  </Settings>
  <Batch>
    <BatchSettings>
      <BatchName>BatchName1</BatchName>
      <BatchSettingOverrides>
        <NewFileDelaySeconds>1</NewFileDelaySeconds>
        <DeleteAfterCopy>false</DeleteAfterCopy>
        <CopyZeroByteFiles>false</CopyZeroByteFiles>
        <CopyThreadPerSource>2</CopyThreadPerSource>
        <SleepBetweenBatchesMs>15000</SleepBetweenBatchesMs>
        <CopyFromFirstDestinationDir>false</CopyFromFirstDestinationDir>
        <CopyRetryCount>1</CopyRetryCount>
        <RetrySleepMs>1</RetrySleepMs>
      </BatchSettingOverrides>
    </BatchSettings>
    <CopyCollection>
      <CopyCollection>
        <SourceFolder>
          <SourceFolderPath>D:\VRAS\Source</SourceFolderPath>
          <SourceSettingOverrides>
            <NewFileDelaySeconds>44</NewFileDelaySeconds>
            <DeleteAfterCopy>false</DeleteAfterCopy>
            <CopyZeroByteFiles>false</CopyZeroByteFiles>
            <CopyThreadPerSource>3</CopyThreadPerSource>
            <SleepBetweenBatchesMs>15000</SleepBetweenBatchesMs>
            <CopyFromFirstDestinationDir>false</CopyFromFirstDestinationDir>
            <CopyRetryCount>1</CopyRetryCount>
            <RetrySleepMs>1</RetrySleepMs>
          </SourceSettingOverrides>
          <FileRegExFilter>.*</FileRegExFilter>
          <FolderRegExFilter>.*</FolderRegExFilter>
          <CopyType>Mirror</CopyType>
        </SourceFolder>
        <DestinationFolder>
          <DestinationLocation>D:\VRAS\Destination</DestinationLocation>
          <HashCompareFlag>true</HashCompareFlag>
          <ArchiveSettings>
            <ArchiveFeatureEnabled>false</ArchiveFeatureEnabled>
            <ArchiveLines>
              <Tier>1</Tier>
              <Option>
                <ArchiveOption>RegExOnFileName</ArchiveOption>
                <ArchiveOptionValue>\.+.*</ArchiveOptionValue>
              </Option>
            </ArchiveLines>
            <ArchiveLines>
              <Tier>2</Tier>
              <Option>
                <ArchiveOption>FileTimeLastModifyTime</ArchiveOption>
                <ArchiveOptionValue>yyyyMMdd</ArchiveOptionValue>
              </Option>
            </ArchiveLines>
            <ArchiveLines>
              <Tier>3</Tier>
              <Option>
                <ArchiveOption>FileTimeDateCreatedTime</ArchiveOption>
                <ArchiveOptionValue>ddMMyyyy</ArchiveOptionValue>
              </Option>
            </ArchiveLines>
          </ArchiveSettings>
        </DestinationFolder>
      </CopyCollection>
    </CopyCollection>
  </Batch>
</VRASConfiguration>